# Environment variables for local development
# Copy to .env and adjust as needed

# Application
APP_NAME=ai-platform
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_platform

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_JOB_TTL=3600

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_TASK_QUEUE=ai_tasks
RABBITMQ_CRM_QUEUE=crm_tasks
RABBITMQ_WA_QUEUE=wa_messages
RABBITMQ_EVENT_EXCHANGE=ai_events

# LLM Provider API Keys (used by LLM Worker and Commerce Agent)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# WAHA WhatsApp API (used by Gateway, Commerce Agent, and Messenger)
WAHA_SERVER_URL=http://localhost:3000
WAHA_API_KEY=your-waha-api-key-here
WAHA_SESSION=default
WAHA_WEBHOOK_SECRET=your-webhook-secret-here

# Midtrans Payment Gateway (used by Commerce Agent)
MIDTRANS_SERVER_KEY=your-midtrans-server-key-here
MIDTRANS_CLIENT_KEY=your-midtrans-client-key-here
MIDTRANS_IS_PRODUCTION=false

# Xendit Payment Gateway (used by Commerce Agent)
XENDIT_SECRET_KEY=your-xendit-secret-key-here

# Conversation Cache (used by Commerce Agent)
CONVERSATION_TTL=3600

# Message Buffer Settings (used by Commerce Agent)
MESSAGE_BUFFER_INITIAL_DELAY=2.0
MESSAGE_BUFFER_MAX_DELAY=10.0
BUFFER_FLUSH_INTERVAL=0.5

# Service identification
SERVICE_NAME=local
